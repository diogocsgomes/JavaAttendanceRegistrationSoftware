<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="pt.isec.pd.tp_pd.controllers.ClientController"
      styleClass="root"
      fx:id="box">
    <stylesheets>
        <URL value="@../css/styles.css"/>
    </stylesheets>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Register attendance"/>
    <TextField fx:id="codeField" promptText="Attendance Registration Code"/>
    <Button fx:id="submitButton" text="Submit attendance" onAction="#onSubmitButtonClick"/>
    <Button onAction="#onCancelButtonClick" text="Return" />
</VBox>
